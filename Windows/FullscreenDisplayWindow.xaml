<Window x:Class="TikTak.Windows.FullscreenDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TikTak Fullscreen" 
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Black"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <Border x:Name="MainBorder" 
                Background="Black" 
                CornerRadius="0" 
                BorderThickness="0"
                BorderBrush="White">
            <Viewbox Margin="100" Stretch="Uniform">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Minus sign for negative time -->
                    <TextBlock x:Name="MinusSign" 
                               Text="-" 
                               FontSize="200" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI, Arial, sans-serif"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="Aliased"
                               Visibility="Collapsed"
                               Margin="0,0,-20,0"/>
                    
                    <!-- Main time display -->
                    <TextBlock x:Name="TimeDisplay" 
                               Text="20:00" 
                               FontSize="200" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI, Arial, sans-serif"
                               TextOptions.TextFormattingMode="Display"
                               TextOptions.TextRenderingMode="Aliased"/>
                </StackPanel>
            </Viewbox>
        </Border>
    </Grid>
</Window>
