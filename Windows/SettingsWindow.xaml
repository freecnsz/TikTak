<Window x:Class="TikTak.Windows.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TikTak - Ayarlar" 
    Height="450" Width="400"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    Background="#F5F7FA"
    Topmost="True"
    WindowStyle="SingleBorderWindow"
    FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Toast Message -->
            <Border x:Name="ToastMessage" Grid.Row="0" 
                    Background="#27AE60" 
                    CornerRadius="4" 
                    Padding="12,6"
                    Margin="0,0,0,8"
                    Visibility="Collapsed">
                <TextBlock x:Name="ToastText" 
                           Text="Ayarlar kaydedildi" 
                           Foreground="White" 
                           FontSize="12"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="0,0,0,16">
                    
                    <!-- Theme Settings -->
                    <GroupBox Header="🎨 Tema Ayarları" Margin="0,0,0,12" Padding="12">
                        <StackPanel>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Tema:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="ThemeComboBox" Grid.Column="1" Style="{StaticResource ModernComboBox}" SelectionChanged="ThemeComboBox_SelectionChanged">
                                    <!-- Themes will be populated in code-behind -->
                                </ComboBox>
                                <Border Grid.Column="2" x:Name="ThemePreview" Width="60" Height="25" Margin="8,0,0,0" CornerRadius="4" BorderThickness="1" BorderBrush="Gray">
                                    <Grid>
                                        <Rectangle x:Name="PreviewBackground" Fill="DarkBlue" RadiusX="3" RadiusY="3"/>
                                        <TextBlock x:Name="PreviewText" Text="20:00" Foreground="Yellow" FontSize="10" FontWeight="Bold" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Grid>
                            
                            <TextBlock x:Name="ThemeDescription" Text="Kongre sunumları için profesyonel görünüm" 
                                       FontStyle="Italic" FontSize="11" Foreground="Gray" Margin="80,4,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Display Size and Margin Settings -->
                    <GroupBox Header="📐 Görüntü Boyutu ve Kenar Mesafesi" Margin="0,0,0,12" Padding="12">
                        <StackPanel>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Boyut:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="DisplaySizeComboBox" Grid.Column="1" Style="{StaticResource ModernComboBox}" SelectionChanged="DisplaySizeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Küçük (120x40)" Tag="Small" IsSelected="True"/>
                                    <ComboBoxItem Content="Orta (150x50)" Tag="Medium"/>
                                    <ComboBoxItem Content="Büyük (180x60)" Tag="Large"/>
                                </ComboBox>
                            </Grid>
                            
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Kenar:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="DisplayMarginComboBox" Grid.Column="1" Style="{StaticResource ModernComboBox}" SelectionChanged="DisplayMarginComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Yakın (10px)" Tag="Close"/>
                                    <ComboBoxItem Content="Normal (20px)" Tag="Normal" IsSelected="True"/>
                                    <ComboBoxItem Content="Uzak (40px)" Tag="Far"/>
                                </ComboBox>
                            </Grid>
                            
                            <TextBlock Text="Sayaç penceresinin boyutunu ve ekran kenarlarından uzaklığını ayarlayın" 
                                       FontStyle="Italic" FontSize="11" Foreground="Gray" Margin="80,4,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Language Settings -->
                    <GroupBox Header="🌍 Dil Ayarları" Margin="0,0,0,12" Padding="12">
                        <StackPanel>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Süre bitti mesajı:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="LanguageComboBox" Grid.Column="1" Style="{StaticResource ModernComboBox}" SelectionChanged="LanguageComboBox_SelectionChanged">
                                    <!-- Languages will be populated in code-behind -->
                                </ComboBox>
                            </Grid>
                            
                            <TextBlock x:Name="LanguageDescription" Text="Sayaçta görünen 'süre bitti' mesajının dili" 
                                       FontStyle="Italic" FontSize="11" Foreground="Gray" Margin="120,4,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Notification Settings -->
                    <GroupBox Header="📢 Bildirim Ayarları" Margin="0,0,0,12" Padding="12">
                        <StackPanel>
                            <CheckBox x:Name="DesktopNotificationsCheckBox" Content="Masaüstü bildirimleri" Style="{StaticResource ModernCheckBox}" IsChecked="True"/>
                            <CheckBox x:Name="TimeEndNotificationCheckBox" Content="Süre bitiminde bildirim" Style="{StaticResource ModernCheckBox}" IsChecked="True"/>
                            <CheckBox x:Name="FiveMinuteWarningCheckBox" Content="5 dakika kala uyar" Style="{StaticResource ModernCheckBox}" IsChecked="False"/>
                            <CheckBox x:Name="OneMinuteWarningCheckBox" Content="1 dakika kala uyar" Style="{StaticResource ModernCheckBox}" IsChecked="True"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Keyboard Shortcuts -->
                    <GroupBox Header="⌨️ Klavye Kısayolları" Margin="0,0,0,12" Padding="12">
                        <StackPanel>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Göster/Gizle:" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Ctrl+Shift+T" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Başlat/Durdur:" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="F5" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Sıfırla:" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="F7" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>



                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Content="Hakkında" 
                        Width="80" Height="32"
                        Background="#3498DB" Foreground="White" 
                        FontSize="11"
                        Style="{StaticResource ModernButton}"
                        Click="AboutButton_Click"/>
                
                <Button Grid.Column="3" 
                        Content="Kaydet" 
                        Width="80" Height="32"
                        Background="#27AE60" Foreground="White" 
                        FontSize="11"
                        Style="{StaticResource ModernButton}"
                        Click="SaveButton_Click"/>
                
                <Button Grid.Column="5" 
                        Content="Varsayılan" 
                        Width="90" Height="32"
                        Background="#95A5A6" Foreground="White" 
                        FontSize="11"
                        Style="{StaticResource ModernButton}"
                        Click="ResetButton_Click"/>
                
                <Button Grid.Column="7" 
                        Content="İptal" 
                        Width="70" Height="32"
                        Background="#E74C3C" Foreground="White" 
                        FontSize="11"
                        Style="{StaticResource ModernButton}"
                        Click="CancelButton_Click"/>
            </Grid>
        </Grid>
</Window>