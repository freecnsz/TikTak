<Window x:Class="TikTak.Windows.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TikTak" 
        Height="50" Width="140"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Black"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="DisplayWindow_MouseLeftButtonDown">
    
    <Border x:Name="MainBorder" 
            Background="Black" 
            CornerRadius="8" 
            BorderThickness="1"
            BorderBrush="White"
            Opacity="0.85">
        <Grid>
            <TextBlock x:Name="TimeDisplay" 
                       Text="20:00" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="4,2"
            />
        </Grid>
    </Border>
</Window>